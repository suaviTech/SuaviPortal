@model IzmPortal.Application.DTOs.Category.UpdateCategoryDto

<div class="admin-card">

    <div class="admin-card-header">
        <h5 class="mb-0">Kategori Düzenle</h5>
        <small class="text-muted">Kategori bilgilerini güncelle</small>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="admin-card-body">

            <div class="mb-3">
                <label class="form-label">Kategori Adı</label>
                <input asp-for="Name"
                       class="form-control" />
                <span asp-validation-for="Name"
                      class="text-danger small"></span>
            </div>

        </div>

        <!-- 🔽 KRİTİK ALAN -->
        <div class="admin-card-footer d-flex justify-content-end gap-2">
            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm fixed-action-btn">
                İptal
            </a>

            <button type="submit"
                    class="btn btn-primary btn-sm fixed-action-btn">
                Güncelle
            </button>
        </div>
    </form>
</div>
