@model IzmPortal.Application.DTOs.Category.CreateCategoryDto

<div class="admin-card">

    <div class="admin-card-header">
        <h5 class="mb-0">Yeni Kategori</h5>
        <small class="text-muted">Yeni bir kategori oluştur</small>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="admin-card-body">

            <div class="mb-3">
                <label class="form-label">Kategori Adı</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Kategori adı giriniz" />
                <span asp-validation-for="Name"
                      class="text-danger small"></span>
            </div>

        </div>

        <!-- 🔽 KRİTİK ALAN -->
        <div class="admin-card-footer d-flex justify-content-end gap-2">
            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm fixed-action-btn">
                İptal
            </a>

            <button type="submit"
                    class="btn btn-primary btn-sm fixed-action-btn">
                Kaydet
            </button>
        </div>
    </form>
</div>
