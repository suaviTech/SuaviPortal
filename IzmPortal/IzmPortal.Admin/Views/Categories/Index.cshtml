@model List<IzmPortal.Application.DTOs.Category.CategoryDto>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="admin-card">

    <div class="admin-card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Kategori Yönetimi</h5>
            <small class="text-muted">Duyurular için kategori tanımları</small>
        </div>

        <a asp-action="Create"
           class="btn btn-outline-primary btn-sm icon-btn"
           title="Yeni Kategori">
            <i class="bi bi-plus-lg"></i>
        </a>


    </div>

    <div class="admin-card-body p-0">

        <table class="admin-table">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th class="text-center">Durum</th>
                    <th class="col-actions">İşlemler</th>

                </tr>
            </thead>
            <tbody>

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            Kayıt bulunamadı.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr class="@(item.IsActive ? "row-active" : "row-passive")">

                            <td>@item.Name</td>

                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="status-dot status-active"></span>
                                }
                                else
                                {
                                    <span class="status-dot status-passive"></span>
                                }
                            </td>

                            <td class="text-end col-actions">
                                <div class="d-inline-flex align-items-center gap-2">
                                    <!-- AKTİF / PASİF -->
                                    <form asp-action="@(item.IsActive ? "Deactivate" : "Activate")"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline">

                                        @Html.AntiForgeryToken()

                                        <button type="submit"
                                                class="btn btn-sm @(item.IsActive ? "btn btn-outline-secondary btn-sm action-btn" : "btn btn-outline-success btn-sm action-btn")">
                                            @(item.IsActive ? "Pasif Yap" : "Aktif Yap")
                                        </button>
                                    </form>

                                    <!-- EDIT -->
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-dark ms-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>


                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

    </div>
</div>
