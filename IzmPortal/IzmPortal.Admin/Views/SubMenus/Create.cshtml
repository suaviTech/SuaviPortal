@model IzmPortal.Application.DTOs.Menu.CreateSubMenuDto
@{
    ViewData["Title"] = "Yeni Alt Menü";
    var menuId = (Guid)ViewBag.MenuId;
}

<h2>Yeni Alt Menü</h2>

<form method="post">
    <input type="hidden" asp-for="MenuId" value="@menuId" />

    <label>Başlık</label>
    <input asp-for="Title" required />

    <label>Sıra</label>
    <input asp-for="Order" type="number" required />

    <div class="mt-3">
        <button class="btn btn-primary">Kaydet</button>
        <a asp-action="Index"
           asp-route-menuId="@menuId"
           class="btn btn-secondary">
            İptal
        </a>
    </div>
</form>
