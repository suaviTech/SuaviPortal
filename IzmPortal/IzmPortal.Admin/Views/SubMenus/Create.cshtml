@using IzmPortal.Application.DTOs.Menu
@using IzmPortal.Application.DTOs.SubMenu
@model CreateSubMenuDto
@{
    ViewData["Title"] = "Yeni Alt Menü";
}

<h2>Yeni Alt Menü</h2>

<form method="post">
    <input type="hidden" asp-for="MenuId" value="@ViewBag.MenuId" />

    <label>Başlık</label>
    <input asp-for="Title" class="form-control" required />

    <div class="mt-3">
        <button class="btn btn-primary">Kaydet</button>
        <a asp-action="Index"
           asp-route-menuId="@ViewBag.MenuId"
           class="btn btn-secondary">İptal</a>
    </div>
</form>
