@using IzmPortal.Application.DTOs.Menu
@using IzmPortal.Application.DTOs.SubMenu
@model List<SubMenuDto>
@{
    ViewData["Title"] = "Alt Menüler";
    var menuId = ViewBag.MenuId;
}

<h2>Alt Menüler</h2>

<a asp-action="Create"
   asp-route-menuId="@menuId"
   class="btn btn-primary mb-3">
    Yeni Alt Menü
</a>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Sıra</th>
            <th>Durum</th>
            <th style="width:240px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sm in Model.OrderBy(x => x.Order))
        {
            <tr>
                <td>@sm.Title</td>
                <td>@sm.Order</td>
                <td>
                    @if (sm.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@sm.Id"
                       asp-route-menuId="@menuId"
                       class="btn btn-warning btn-sm">
                        Düzenle
                    </a>

                    @if (sm.IsActive)
                    {
                        <form asp-action="Deactivate"
                              asp-route-id="@sm.Id"
                              asp-route-menuId="@menuId"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-secondary btn-sm">Pasif</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate"
                              asp-route-id="@sm.Id"
                              asp-route-menuId="@menuId"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-success btn-sm">Aktif</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
