@model List<IzmPortal.Application.DTOs.Menu.SubMenuDto>
@{
    ViewData["Title"] = "Alt Menüler";
    var menuId = (Guid)ViewBag.MenuId;
}

<h2>Alt Menüler</h2>

<a asp-action="Create"
   asp-route-menuId="@menuId"
   class="btn btn-primary mb-3">
    Yeni Alt Menü
</a>

<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Sıra</th>
            <th>Durum</th>
            <th style="width:260px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.OrderBy(x => x.Order))
        {
            <tr>
                <td>@s.Title</td>
                <td class="text-center">@s.Order</td>
                <td class="text-center">
                    @if (s.IsActive)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Pasif</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit"
                       asp-route-id="@s.Id"
                       asp-route-menuId="@menuId"
                       class="btn btn-warning">
                        Düzenle
                    </a>

                    @if (s.IsActive)
                    {
                        <form asp-action="Deactivate"
                              asp-route-id="@s.Id"
                              asp-route-menuId="@menuId"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-secondary">Pasif</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate"
                              asp-route-id="@s.Id"
                              asp-route-menuId="@menuId"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-success">Aktif</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Menus"
   asp-action="Index"
   class="btn btn-secondary mt-3">
    ← Menü Listesine Dön
</a>
