@using IzmPortal.Application.DTOs.Menu
@using IzmPortal.Application.DTOs.SubMenu
@model UpdateSubMenuDto
@{
    ViewData["Title"] = "Alt Menü Düzenle";
}

<h2>Alt Menü Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <label>Başlık</label>
    <input asp-for="Title" class="form-control" required />

    <div class="mt-3">
        <button class="btn btn-primary">Güncelle</button>
        <a asp-action="Index"
           asp-route-menuId="@ViewBag.MenuId"
           class="btn btn-secondary">İptal</a>
    </div>
</form>
