@model IzmPortal.Application.DTOs.Menu.UpdateSubMenuDto
@{
    ViewData["Title"] = "Alt Menü Düzenle";
    var menuId = (Guid)ViewBag.MenuId;
}

<h2>Alt Menü Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <label>Başlık</label>
    <input asp-for="Title" required />

    <label>Sıra</label>
    <input asp-for="Order" type="number" required />

    <div class="mt-3">
        <button class="btn btn-primary">Güncelle</button>
        <a asp-action="Index"
           asp-route-menuId="@menuId"
           class="btn btn-secondary">
            İptal
        </a>
    </div>
</form>
