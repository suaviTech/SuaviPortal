@model List<IzmPortal.Admin.ViewModels.MenuTree.MenuTreeVm>

<h2>Menü Yapısı</h2>

@foreach (var menu in Model)
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>📁 @menu.MenuTitle</strong>

            <div>
                <a asp-controller="Menus"
                   asp-action="Edit"
                   asp-route-id="@menu.MenuId"
                   class="btn btn-sm btn-warning">
                    Düzenle
                </a>
            </div>
        </div>

        <div class="card-body">
            @foreach (var sm in menu.SubMenus)
            {
                <div class="ms-3 mb-3 border-start ps-3">

                    <div class="d-flex justify-content-between">
                        <strong>📂 @sm.Title</strong>

                        <div>
                            <a asp-controller="SubMenus"
                               asp-action="Edit"
                               asp-route-id="@sm.SubMenuId"
                               asp-route-menuId="@menu.MenuId"
                               class="btn btn-sm btn-warning">
                                Düzenle
                            </a>

                            <a asp-controller="MenuDocuments"
                               asp-action="Upload"
                               asp-route-subMenuId="@sm.SubMenuId"
                               class="btn btn-sm btn-primary">
                                + Doküman
                            </a>
                        </div>
                    </div>

                    <ul class="ms-3 mt-2">
                        @foreach (var doc in sm.Documents)
                        {
                            <li class="mb-1">
                                📄 @doc.Title

                                <button class="btn btn-sm btn-outline-info"
                                        onclick="openPdf('@doc.FilePath','@doc.Title')">
                                    Gör
                                </button>

                                <form asp-controller="MenuDocuments"
                                      asp-action="Delete"
                                      asp-route-id="@doc.Id"
                                      asp-route-subMenuId="@sm.SubMenuId"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Silinsin mi?');">
                                    <button class="btn btn-sm btn-outline-danger">
                                        Sil
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
}

<!-- PDF MODAL -->
<div class="modal fade" id="pdfModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pdfTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0" style="height:80vh;">
                <iframe id="pdfFrame"
                        style="width:100%;height:100%;border:none;"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openPdf(path, title) {
            document.getElementById("pdfTitle").innerText = title;
            document.getElementById("pdfFrame").src = path;
            new bootstrap.Modal(document.getElementById("pdfModal")).show();
        }
    </script>
}
