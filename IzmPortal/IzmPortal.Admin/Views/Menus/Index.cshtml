@model List<IzmPortal.Application.DTOs.Menu.MenuDto>

@{
    ViewData["Title"] = "Menüler";
}

<h2>Menüler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Yeni Menü
</a>

<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Sıra</th>
            <th>Durum</th>
            <th style="width:260px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.OrderBy(x => x.Order))
        {
            <tr>
                <td>@m.Title</td>
                <td class="text-center">@m.Order</td>
                <td class="text-center">
                    @if (m.IsActive)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Pasif</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit"
                       asp-route-id="@m.Id"
                       class="btn btn-warning">
                        Düzenle
                    </a>

                    @if (m.IsActive)
                    {
                        <form asp-action="Deactivate"
                              asp-route-id="@m.Id"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-secondary">Pasif</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate"
                              asp-route-id="@m.Id"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-success">Aktif</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
