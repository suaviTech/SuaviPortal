@model List<IzmPortal.Application.DTOs.Menu.MenuDto>

<h2>Menüler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Menü</a>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Sıra</th>
            <th>Durum</th>
            <th style="width:260px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.OrderBy(x => x.Order))
        {
            <tr>
                <td>@m.Title</td>
                <td class="text-center">@m.Order</td>
                <td class="text-center">
                    <span class="badge @(m.IsActive ? "bg-success" : "bg-secondary")">
                        @(m.IsActive ? "Aktif" : "Pasif")
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-warning btn-sm">Düzenle</a>

                    <form asp-action="@(m.IsActive ? "Deactivate" : "Activate")"
                          asp-route-id="@m.Id"
                          method="post"
                          class="d-inline">
                        <button class="btn btn-sm @(m.IsActive ? "btn-secondary" : "btn-success")">
                            @(m.IsActive ? "Pasif" : "Aktif")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
