@model IzmPortal.Application.DTOs.Menu.UpdateMenuDto

@{
    ViewData["Title"] = "Menü Düzenle";
}

<div class="content-header">
    <h1 class="page-title">Menü Düzenle</h1>
</div>

<div class="content-body">
    <div class="card">
        <div class="card-body">

            <form method="post" class="row g-3">

                <input type="hidden" asp-for="Id" />

                <div class="col-md-6">
                    <label asp-for="Title" class="form-label">Menü Başlığı</label>
                    <input asp-for="Title"
                           class="form-control"
                           required />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Order" class="form-label">Sıra</label>
                    <input asp-for="Order"
                           type="number"
                           class="form-control"
                           min="1"
                           required />
                    <span asp-validation-for="Order" class="text-danger small"></span>
                </div>

                <div class="col-12 d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">
                        Güncelle
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        İptal
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
