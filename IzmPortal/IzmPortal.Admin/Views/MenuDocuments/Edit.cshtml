@model IzmPortal.Application.DTOs.MenuDocument.UpdateMenuDocumentDto

@{
    ViewData["Title"] = "Doküman Düzenle";
    var subMenuId = ViewBag.SubMenuId;
}

<h2>Doküman Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input asp-for="Title"
               class="form-control"
               required />
    </div>

    <button class="btn btn-primary">
        Güncelle
    </button>

    <a asp-action="Index"
       asp-route-subMenuId="@subMenuId"
       class="btn btn-secondary">
        İptal
    </a>
</form>
