@{
    ViewData["Title"] = "Doküman Yükle";
    var menuId = (Guid)ViewBag.MenuId;
}

<div class="admin-page">

    @await Html.PartialAsync(
    "_PageHeader",
        ("Doküman Yükle",
        "Seçilen alt menüye yeni doküman ekleyin",
        $"<a href='/MenuDocuments/Index?menuId={menuId}' class='btn btn-outline-secondary btn-sm'>Geri</a>")
        )

    <div class="admin-table">

        <form method="post"
              enctype="multipart/form-data">

            <input type="hidden" name="menuId" value="@menuId" />

            <div class="mb-3">
                <label class="form-label">Doküman Başlığı</label>
                <input type="text"
                       name="title"
                       class="form-control"
                       placeholder="Örn: Başvuru Formu" />
            </div>

            <div class="mb-3">
                <label class="form-label">Dosya</label>
                <input type="file"
                       name="file"
                       class="form-control"
                       accept=".pdf"
                       required />
                <div class="form-text">Sadece PDF dosyaları yüklenebilir.</div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit"
                        class="btn btn-primary btn-sm">
                    Yükle
                </button>

                <a href="/MenuDocuments/Index?menuId=@menuId"
                   class="btn btn-outline-secondary btn-sm">
                    İptal
                </a>
            </div>

        </form>

    </div>
</div>
