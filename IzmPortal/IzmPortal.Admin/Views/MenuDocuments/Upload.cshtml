@{
    ViewData["Title"] = "Doküman Yükle";
    var subMenuId = ViewBag.SubMenuId;
}

<h2>Doküman Yükle</h2>

<form asp-action="Upload"
      method="post"
      enctype="multipart/form-data">

    <input type="hidden"
           name="subMenuId"
           value="@subMenuId" />

    <div class="mb-3">
        <label class="form-label">Doküman Başlığı</label>
        <input type="text"
               name="title"
               class="form-control"
               required />
    </div>

    <div class="mb-3">
        <label class="form-label">PDF Dosyası</label>
        <input type="file"
               name="file"
               class="form-control"
               accept="application/pdf"
               required />
        <small class="text-muted">
            Sadece PDF dosyaları yüklenebilir.
        </small>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            Yükle
        </button>

        <a asp-action="Index"
           asp-route-subMenuId="@subMenuId"
           class="btn btn-secondary ms-2">
            İptal
        </a>
    </div>
</form>
