@{
    ViewData["Title"] = "PDF Yükle";
    var subMenuId = (Guid)ViewBag.SubMenuId;
}

<h2>PDF Yükle</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="subMenuId" value="@subMenuId" />

    <label>Başlık</label>
    <input name="title" required />

    <label>PDF Dosyası</label>
    <input type="file" name="file" accept=".pdf" required />

    <div class="mt-3">
        <button class="btn btn-primary">Yükle</button>
        <a asp-action="Index"
           asp-route-subMenuId="@subMenuId"
           class="btn btn-secondary">
            İptal
        </a>
    </div>
</form>

