@{
    var current = ViewContext.RouteData.Values["controller"]?.ToString();
}

@* Dashboard – herkes *@
<a asp-controller="Home"
   asp-action="Index"
   class="@(current == "Home" ? "active" : "")">
    Dashboard
</a>

@* Uygulama Kısayolları – SuperAdmin + Manager *@
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager"))
{
    <a asp-controller="ApplicationShortcuts"
       asp-action="Index"
       class="@(current == "ApplicationShortcuts" ? "active" : "")">
        Uygulama Kısayolları
    </a>
}

@* Kullanıcı Yönetimi – sadece SuperAdmin *@
@if (User.IsInRole("SuperAdmin"))
{
    <a asp-controller="Users"
       asp-action="Index"
       class="@(current == "Users" ? "active" : "")">
        Kullanıcı Yönetimi
    </a>

    <a asp-controller="AuditLogs"
       asp-action="Index"
       class="@(current == "AuditLogs" ? "active" : "")">
        Audit Logları
    </a>
}
