@model IzmPortal.Application.DTOs.ApplicationShortcut.CreateUpdateApplicationShortcutDto
@{
    ViewData["Title"] = "Kısayol";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <label>Başlık</label>
    <input asp-for="Title" required />

    <label>Icon (ör: bi bi-gear)</label>
    <input asp-for="Icon" />

    <label>URL</label>
    <input asp-for="Url" />

    <label>
        <input type="checkbox" asp-for="IsExternal" />
        Harici bağlantı
    </label>

    <label>
        <input type="checkbox" asp-for="IsActive" />
        Aktif
    </label>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index">İptal</a>
    </div>
</form>
