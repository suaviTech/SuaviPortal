@model IzmPortal.Application.DTOs.ApplicationShortcut.UpdateApplicationShortcutDto

<h2>Kısayol Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <label>Başlık</label>
    <input asp-for="Title" class="form-control" required />

    <label>URL</label>
    <input asp-for="Url" class="form-control" required />

    <label>Icon</label>
    <input asp-for="Icon" class="form-control" required />

    <label>Sıra</label>
    <input asp-for="Order" type="number" class="form-control" required />

    <button class="btn btn-primary mt-3">Güncelle</button>
</form>
