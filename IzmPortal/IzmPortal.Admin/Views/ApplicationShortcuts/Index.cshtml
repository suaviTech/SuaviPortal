@model List<IzmPortal.Application.DTOs.ApplicationShortcut.ApplicationShortcutAdminDto>

@{
    ViewData["Title"] = "Uygulama Kısayolları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Uygulama Kısayolları</h2>

    <a asp-action="Create"
       class="btn btn-primary btn-sm">
        Yeni Kısayol
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-sm table-striped mb-0 align-middle">
            <thead>
                <tr>
                    <th class="text-center" style="width:60px">Icon</th>
                    <th>Başlık</th>
                    <th class="text-center" style="width:70px">Sıra</th>
                    <th>URL</th>
                    <th class="text-center" style="width:90px">Durum</th>
                    <th class="text-end" style="width:260px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6"
                            class="text-center text-muted p-3">
                            Kayıt bulunamadı
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var i in Model.OrderBy(x => x.Order))
                    {
                        <tr>
                            <td class="text-center">
                                <i class="@i.Icon"></i>
                            </td>

                            <td>@i.Title</td>

                            <td class="text-center">
                                @i.Order
                            </td>

                            <td>
                                <small class="text-muted">@i.Url</small>
                            </td>

                            <td class="text-center">
                                @if (i.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@i.Id"
                                   class="btn btn-warning btn-sm">
                                    Düzenle
                                </a>

                                @if (i.IsActive)
                                {
                                    <form asp-action="Deactivate"
                                          asp-route-id="@i.Id"
                                          method="post"
                                          class="d-inline">
                                        <button class="btn btn-secondary btn-sm">
                                            Pasif
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Activate"
                                          asp-route-id="@i.Id"
                                          method="post"
                                          class="d-inline">
                                        <button class="btn btn-success btn-sm">
                                            Aktif
                                        </button>
                                    </form>
                                }

                                <form asp-action="Delete"
                                      asp-route-id="@i.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Silinsin mi?');">
                                    <button class="btn btn-danger btn-sm">
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
