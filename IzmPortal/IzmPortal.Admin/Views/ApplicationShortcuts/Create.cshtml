@model IzmPortal.Application.DTOs.ApplicationShortcut.CreateApplicationShortcutDto

<h2>Yeni Kısayol</h2>

<form method="post">
    <label>Başlık</label>
    <input asp-for="Title" class="form-control" required />

    <label>URL</label>
    <input asp-for="Url" class="form-control" required />

    <label>Icon (FontAwesome)</label>
    <input asp-for="Icon" class="form-control" required />

    <label>Sıra</label>
    <input asp-for="Order" type="number" class="form-control" required />

    <button class="btn btn-primary mt-3">Kaydet</button>
</form>
