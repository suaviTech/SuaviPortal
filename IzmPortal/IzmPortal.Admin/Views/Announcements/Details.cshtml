@model IzmPortal.Application.DTOs.Announcement.AnnouncementDto
@using IzmPortal.Application.Common

@{
    ViewData["Title"] = "Duyuru Detayı";
    var apiBaseUrl = ViewData["ApiBaseUrl"] as string;
}

<div class="admin-card">
    <div class="admin-card-header">
        <h5>@Model.Title</h5>
        <small class="text-muted">@Model.CategoryName</small>
    </div>

    <div class="admin-card-body">
        <p>@Model.Content</p>

        @if (!string.IsNullOrWhiteSpace(Model.PdfUrl) && !string.IsNullOrWhiteSpace(apiBaseUrl))
        {
            var pdfUrl = FileUrlBuilder.Build(apiBaseUrl!, Model.PdfUrl);
            <hr />
            <a href="@pdfUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-file-earmark-pdf"></i> PDF Aç
            </a>
        }
    </div>

    <div class="admin-card-footer text-end">
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            Geri Dön
        </a>
    </div>
</div>
