@model List<IzmPortal.Application.DTOs.Announcement.AnnouncementDto>

@{
    ViewData["Title"] = "Duyurular";
}

<h2>Duyurular</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Yeni Duyuru
</a>

<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Oluşturma Tarihi</th>
            <th>Durum</th>
            <th style="width:260px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.CategoryName</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td class="text-center">
                    @if (item.IsActive)
                    {
                        <span class="badge badge-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Pasif</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-warning">
                        Düzenle
                    </a>

                    @if (item.IsActive)
                    {
                        <form asp-action="Deactivate"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-secondary">Pasif</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            <button class="btn btn-success">Aktif</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
