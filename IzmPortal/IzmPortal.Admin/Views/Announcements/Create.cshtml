@model IzmPortal.Application.DTOs.Announcement.CreateAnnouncementDto
@using IzmPortal.Application.DTOs.Category

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="admin-card-body">

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">Kategori seçiniz</option>
                @foreach (var c in (List<CategoryDto>)ViewBag.Categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">PDF (opsiyonel)</label>
            <input type="file" name="pdfFile" class="form-control" />
        </div>

        @await Html.PartialAsync("_FormActions", "Kaydet")
    </div>
</form>
