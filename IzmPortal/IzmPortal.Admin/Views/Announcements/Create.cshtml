@model IzmPortal.Application.DTOs.Announcement.CreateAnnouncementDto

@{
    ViewData["Title"] = "Yeni Duyuru";
    var categories =
        ViewBag.Categories as List<IzmPortal.Application.DTOs.Category.CategoryDto>;
}

<div class="admin-card">
    <h3>Yeni Duyuru</h3>
    <div class="subtitle">
        Portalda yayınlanacak yeni bir duyuru oluşturun.
    </div>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea asp-for="Content"
                      rows="6"
                      class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select" required>
                <option value="">Seçiniz</option>
                @foreach (var c in categories!)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">PDF URL (opsiyonel)</label>
            <input asp-for="PdfUrl"
                   class="form-control"
                   placeholder="/docs/duyurular/ornek.pdf" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                İptal
            </a>
        </div>
    </form>
</div>
