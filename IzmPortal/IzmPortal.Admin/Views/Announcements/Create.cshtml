@model IzmPortal.Application.DTOs.Announcement.CreateAnnouncementDto

@{
    ViewData["Title"] = "Yeni Duyuru";
    var categories =
        ViewBag.Categories as List<IzmPortal.Application.DTOs.Category.CategoryDto>;
}

<h2>Yeni Duyuru</h2>

<form method="post">
    <label>Başlık</label>
    <input asp-for="Title" required />

    <label>İçerik</label>
    <textarea asp-for="Content" rows="6"></textarea>

    <label>Kategori</label>
    <select asp-for="CategoryId" required>
        <option value="">Seçiniz</option>
        @foreach (var c in categories!)
        {
            <option value="@c.Id">@c.Name</option>
        }
    </select>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
