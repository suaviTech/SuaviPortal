@model IzmPortal.Application.DTOs.Announcement.UpdateAnnouncementDto

@{
    ViewData["Title"] = "Duyuru Düzenle";
    var categories =
        ViewBag.Categories as List<IzmPortal.Application.DTOs.Category.CategoryDto>;
}

<h2>Duyuru Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <label>Başlık</label>
    <input asp-for="Title" required />

    <label>İçerik</label>
    <textarea asp-for="Content" rows="6"></textarea>

    <label>Kategori</label>
    <select asp-for="CategoryId"
            asp-items="@(new SelectList(categories, "Id", "Name"))"
            required>
    </select>

    <label>
        <input type="checkbox" asp-for="IsActive" />
        Aktif
    </label>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
