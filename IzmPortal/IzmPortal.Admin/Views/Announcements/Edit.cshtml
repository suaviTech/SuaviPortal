@model IzmPortal.Application.DTOs.Announcement.UpdateAnnouncementDto
@using IzmPortal.Application.DTOs.Category

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="admin-card-body">

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select">
                @foreach (var c in (List<CategoryDto>)ViewBag.Categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Yeni PDF (opsiyonel)</label>
            <input type="file" name="pdfFile" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Aktif</label>
        </div>

        @await Html.PartialAsync("_FormActions", "Güncelle")
    </div>
</form>
