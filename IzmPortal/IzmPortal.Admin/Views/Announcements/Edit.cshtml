@model IzmPortal.Application.DTOs.Announcement.UpdateAnnouncementDto

@{
    ViewData["Title"] = "Duyuru Düzenle";
    var categories =
        ViewBag.Categories as List<IzmPortal.Application.DTOs.Category.CategoryDto>;
}

<div class="admin-card">
    <h3>Duyuru Düzenle</h3>
    <div class="subtitle">
        Mevcut duyuru bilgilerini güncelleyin.
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            <textarea asp-for="Content"
                      rows="6"
                      class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId"
                    asp-items="@(new SelectList(categories, "Id", "Name"))"
                    class="form-select"
                    required>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">PDF URL</label>
            <input asp-for="PdfUrl" class="form-control" />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Aktif</label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Güncelle
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                İptal
            </a>
        </div>
    </form>
</div>
